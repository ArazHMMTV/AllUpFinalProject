@model Blog


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-12">
            <div class="card">
                <div style="background-color:#3f64d1;color:white" class="card-header">
                    @Model.Title
                </div>
                <div  class="card-body">
                    <div style="display:flex;justify-content:space-between">
                        <p>

                            Image:  <img style="width:100px;height:100px" src="~/assets//images/@Model.ImagePath" />
                        </p>
                     

                    </div>


                    <br />

                    Author:@Model.Author
                    <br />

                    Date:@Model.CreatedTime.ToShortDateString()
                    <br />

                    Category : @Model.BlogCategory.Name

                    <br />

                    Description

                    @Model.Description

                   
                    <br />

                    <a asp-action="Index" class="btn btn-primary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
