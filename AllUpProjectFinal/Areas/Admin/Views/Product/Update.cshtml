@model ProductUpdateVm
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Update Product</h4>

        <form method="post" class="forms-sample" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="LongDescription"></label>
                <input asp-for="LongDescription" class="form-control" placeholder="Long Description">
                <span asp-validation-for="LongDescription" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ShortDescription"></label>
                <input asp-for="ShortDescription" class="form-control" placeholder="Short Description">
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Discount"></label>
                <input asp-for="Discount" class="form-control" placeholder="Discount">
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ProductCode"></label>
                <input asp-for="ProductCode" class="form-control" placeholder="Product code">
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control" placeholder="Rating">
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" placeholder="Quantity">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>




            <div class="form-group">

                <select asp-for="CategoryId">
                    <option selected disabled>Select Category</option>
                    @foreach (Category category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>

            </div>



            <div class="form-group">

                <select asp-for="BrandId">
                    <option selected disabled>Select Brand</option>
                    @foreach (Brand brand in ViewBag.Brands)
                    {
                        <option value="@brand.Id">@brand.Name</option>
                    }
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>

            </div>


            <div class="form-group">

                <select asp-for="TagIds">
                    <option disabled>Select Tags</option>
                    @foreach (Tag tag in ViewBag.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }
                </select>
                <span asp-validation-for="TagIds" class="text-danger"></span>

            </div>


            <img src="~/assets/images/@Model.MainImagePath" style="height:100px;width:100px" />


            <div class="form-group">
                <label asp-for="MainImage"></label>
                <input asp-for="MainImage" class="form-control" placeholder="MainImage">
                <input asp-for="MainImagePath" type="hidden" />
                <span asp-validation-for="MainImage" class="text-danger"></span>
            </div>

            <img src="~/assets/images/@Model.HoverImagePath" style="height:100px;width:100px" />

            <div class="form-group">
                <label asp-for="HoverImage"></label>
                <input asp-for="HoverImage" class="form-control" placeholder="HoverImage">
                <input asp-for="HoverImagePath" type="hidden" />
                <span asp-validation-for="HoverImage" class="text-danger"></span>
            </div>




            <br />
            @for (int i = 0; i < Model.ImagePaths?.Count; i++)
            {
                var imagePath = Model.ImagePaths[i];

                <div style="position: relative; display: inline-block; margin-right: 10px;">
                    <div style="position: relative;">
                        <img style="width: 100px; height: 100px;" class="primary-img"
                             src="~/assets/images/@imagePath"
                             alt="Product Images" />
                        <button type="button" class="buttonRemove btn btn-danger" style="position: absolute; top: 0; right: 0; z-index: 1;">
                            x
                        </button>
                        <input asp-for="ImagePaths" type="hidden" value="@imagePath" />
                        <input asp-for="ImageIds" type="hidden" value="@Model.ImageIds?[i]" />
                    </div>

                </div>
            }

            <div class="form-group">
                <label asp-for="Images"></label>
                <input asp-for="Images" class="form-control" placeholder="Images">
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary me-2">Submit</button>
            <button class="btn btn-light" asp-action="index">Cancel</button>
        </form>
    </div>
</div>







<script>
    const removeButtons = document.querySelectorAll('.buttonRemove')


    removeButtons.forEach((btn) => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            e.target.parentElement.remove();
        })
    })
</script>