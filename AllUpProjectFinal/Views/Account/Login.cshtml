@model LoginVm
<section class="login-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">Login to Your Account</h4>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="single-form">
                            <input asp-for="Email" required placeholder="Email *">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="single-form">
                            <input asp-for="Password" required placeholder="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="custom-checkbox mt-30">
                            <input type="checkbox" asp-for="RememberMe">
                            <span class="text-danger" asp-validation-for="RememberMe"></span>
                            <label for="account"></label>
                            <p>Remember me</p>
                        </div>
                        <div class="single-form">
                            <button type="submit" class="main-btn main-btn-2">Login</button>
                        </div>
                    </form>
                    <p class="mt-20"><a href="#">Lost your password?</a></p>
                    <p class="mt-10">No account? <a href="register.html">Create one here.</a></p>
                </div>
            </div>
        </div>
    </div>
</section>
