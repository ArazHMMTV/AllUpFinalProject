@model HomeVm
<!--====== Slider Part Start ======-->

<section class="slider-area slider-active">
    @foreach (var slider in Model.Sliders)
    {
        <div class="single-slider">
            <div class="slider-image">
                <img src="~/assets/images/@slider.ImagePath" alt="slider" />
            </div>
            <div class="slider-content-wrapper">
                <div class="container-fluid custom-container">
                    <div class="slider-content">
                        <h4 data-animation="fadeInDown"
                            data-delay="0.5s"
                            class="sub-title">
                            @slider.Subtitle
                        </h4>
                        <h1 data-animation="fadeInLeft"
                            data-delay="0.5s"
                            class="main-title">
                            @slider.Title
                        </h1>
                        <p data-animation="fadeInRightBig" data-delay="0.5s">
                            @slider.Description
                        </p>
                        <a data-animation="zoomIn"
                           data-delay="0.5s"
                           class="main-btn"
                           asp-action="Index" asp-controller="Shop">Shop Now</a>
                    </div>
                </div>
                <!-- container -->
            </div>
        </div>

    }
    <!-- single slider -->

</section>

<!--====== Slider Part Ends ======-->
