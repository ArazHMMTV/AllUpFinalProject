<section class="blog-area blog-bg pt-100 pb-100">
    <div class="container">
        <div class="row blog-active">
            @foreach (var blog in Model.Blogs)
            {
            <div class="col-lg-4">
                <div class="single-blog">
                    <div class="blag-image">
                        <a asp-action="Detail" asp-controller="Blog" asp-route-id="@blog.Id">
                            <img src="~/assets/images/@blog.ImagePath" alt="Blog" />
                        </a>
                        <p class="meta-date">
                            <span class="month">@blog.CreatedTime.ToShortDateString()</span>
                        </p>
                    </div>
                    <div class="blag-content">
                        <h2 class="blog-title">
                                <a asp-action="Detail" asp-controller="Blog" asp-route-id="@blog.Id">@blog.Title</a>
                        </h2>
                           @if(blog.Description.Length>100)
                                {
                                    <p>
                                        @blog.Description.Substring(0,100) ...
                                    </p>
                                }
                                else
                                {
                                <p>
                                        @blog.Description
                                </p>
                                }
                    </div>
                </div>
                <!-- single blog -->
            </div>
                
            }
        </div>
        <!-- row -->
    </div>
    <!-- container -->
</section>

<!--====== Blog Part Ends ======-->
