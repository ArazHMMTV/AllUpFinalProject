@model BlogVm
<!--====== Blog Part Start ======-->

<section class="blog-page pt-20">
    <div class="container-fluid custom-container">
        <div class="row">
            <div class="col-lg-9">
                <div class="blog-posts">
                    <div class="row">
                        @if (Model.Blogs.Count > 0)
                        {
                            @foreach (var blog in Model.Blogs)
                            {
                                <div class="col-md-6">
                                    <div class="single-blog-post blog-grid-post mt-30">
                                        <div class="blog-post-media">
                                            <div class="blog-image">
                                                <a asp-action="Detail" asp-route-id="@blog.Id"><img src="~/assets/images/@blog.ImagePath" alt="blog"></a>
                                            </div>
                                        </div>
                                        <div class="blog-post-content">
                                            <h4 class="blog-title"><a href="blog-single-left-sidebar.html">@blog.Title</a></h4>
                                            <ul class="blog-meta">
                                                <li><a href="#"><i class="fas fa-user-circle"></i> @blog.Author</a></li>
                                                <li><a href="#"><i class="fas fa-calendar-alt"></i> @blog.CreatedTime.ToShortDateString()</a></li>
                                            </ul>
                                            @if (blog.Description.Length > 100)
                                            {
                                                <p>
                                                    @blog.Description.Substring(0, 100) ...
                                                </p>
                                            }
                                            else
                                            {
                                                <p>
                                                    @blog.Description

                                                </p>
                                            }
                                            <a asp-action="Detail" asp-route-id="@blog.Id" class="main-btn main-btn-2">Read More</a>
                                        </div>
                                    </div> <!-- single blog post -->
                                </div>

                            }
                        }
                        else
                        {
                            <h2>Blog is not found</h2>
                        }
                    </div>
                </div> <!-- blog posts -->
                @*
                <ul class="pagination justify-content-center mt-30">
                <li><a href="#"><i class="fal fa-chevron-left"></i></a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#"><i class="fal fa-chevron-right"></i></a></li>
                </ul> *@
            </div>

            <div class="col-lg-3">
                <div class="blog-sidebar">


                    <div class="sidebar-widget mt-30">
                        <h4 class="sidebar-title">Categories</h4>
                        <div class="blog-sidebar-categories">
                            <ul class="categories-list">
                                @foreach (var category in Model.BlogCategories)
                                {
                                    <li><a asp-action="Index" asp-route-categoryId="@category.Id">@category.Name (@category.Blogs.Count)</a></li>

                                }

                            </ul>
                        </div>
                    </div> <!-- sidebar widget -->

                </div> <!-- blog sidebar -->
            </div>
        </div> <!-- row -->
    </div> <!-- container -->
</section>

<!--====== Blog Part Ends ======-->
